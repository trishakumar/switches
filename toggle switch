int ledState = 0;
int led = 8;
int button = 12;
int buttonNew;
int buttonOld = 1;
int d = 100;
void setup() {
  // put your setup code here, to run once:
Serial.begin(9600);  
pinMode(led, OUTPUT);
pinMode (button, INPUT);
   
}                                                                          

void loop() {
  // put your main code here, to run repeatedly:
buttonNew = digitalRead(button);
if(buttonOld == 0 && buttonNew == 1)
{
  if(ledState == 0)
  {
    digitalWrite(led, HIGH);
    ledState = 1;
  }
  
}
else
{
  digitalWrite(led, LOW);
  ledState = 0;
}
buttonOld = buttonNew;
delay(d);

}
